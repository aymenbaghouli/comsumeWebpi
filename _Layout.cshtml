<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/mytemplate/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/mytemplate/css/magnific-popup.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Content/mytemplate/css/templatemo-style.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%; /*Fixes the height to 100% of the viewport*/
        }

        body {
            padding-top: 87px; /*50px for the height of the navbar + 37px for the offset*/
            padding-bottom: 50px; /*50px for the height of the bottom navbar*/
        }

        #navbar {
            position: fixed; /* Make it stick/fixed */
            top: 0; /* Stay on top */
            width: 100%; /* Full width */
            transition: top 0.3s; /* Transition effect when sliding down (and up) */
        }

        .navbar-offset {
            top: 37px; /*Offsets the top navbar 37px from the top of the viewport*/
        }

        .container-fluid.scrollable {
            height: 100%; /*Sets the scrollable area to 100% of the viewport*/
            overflow: auto; /*Allows the scrollable area to have a scrollbar based on the height of its content*/
            background: #ccc;
        }
    </style>
</head>
<body>



    <!-- MENU -->
    <section class="navbar custom-navbar navbar-fixed-top" role="navigation" style="background-color:lightseagreen">
        <div class="container">

            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>

                <!-- lOGO TEXT HERE -->
                <a href="index.html" class="navbar-brand">4Kids</a>
            </div>

            <!-- MENU LINKS -->
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-nav-first">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("KinderGarten's Meetings", "Index", "jardin")</li>
                    <li>@Html.ActionLink("Doctor's Meetings", "Index", "Medecin")</li>
                    <li>@Html.ActionLink("Teacher's Meetinngs", "Index", "meet")</li>
                    <br>
                    <li>@Html.ActionLink("Buses", "Index", "bbus")</li>

                    <li></li>

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><i class="fa fa-facebook-square"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                    <li class="section-btn"><a href="#" data-toggle="modal" data-target="#modal-form">Sign in / Join</a></li>
                </ul>
            </div>

        </div>
        </nav>
    </section>
    <div>
        <!-- HOME -->

        @RenderBody()

        <hr />
        <!-- FOOTER -->
        <footer data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row">

                    <div class="col-md-5 col-sm-12">
                        <div class="footer-thumb footer-info">
                            <h2>Our Web Site</h2>
                            <p>Our product is an easy and simple website which works to help the parents to choose a kindergarten aligned with their needs.</p>
                        </div>
                    </div>



                    <div class="col-md-3 col-sm-4">
                        <div class="footer-thumb">
                            <h2>Find us</h2>
                            <p> 15 Rue Astan cité Nasr 2083</p>
                        </div>
                    </div>

                    <div class="col-md-12 col-sm-12">
                        <div class="footer-bottom">
                            <div class="col-md-6 col-sm-5">
                                <div class="copyright-text">
                                    <p>Copyright &copy; 2021 Your KinderGarten</p>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-7">
                                <div class="phone-contact">
                                    <p>Call us <span>(+66) 010-020-0340</span></p>
                                </div>

                            </div>
                            <ul class="social-icon">
                                <li><a href="https://www.facebook.com/templatemo" class="fa fa-facebook-square" attr="facebook icon"></a></li>
                                <li><a href="#" class="fa fa-twitter"></a></li>
                                <li><a href="#" class="fa fa-instagram"></a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
    </div>
    </footer>






    </div>
    <script src="~/Scripts/alertify.min.js"></script>
    <link href="~/Content/alertifyjs/alertify.rtl.css" rel="stylesheet" />

    <link href="~/Content/alertifyjs/alertify.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/alertify.css" rel="stylesheet" />
    <script src="~/Scripts/alertify.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


    @RenderSection("scripts", required: false)
</body>
</html>




